<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context="com.moviles.bus_station.MainActivity"
    tools:ignore="MergeRootFrame" >

    <AutoCompleteTextView
        android:id="@+id/autoCompleteRutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="@string/str_ingr_ruta"
        android:textColor="#f59b26"
        android:textColorHint="#fed31f"
        android:textColorLink="#fed31f"
        android:visibility="visible" >

        <requestFocus />
    </AutoCompleteTextView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_welcom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/andrmapalittle" />

    <TextView
        android:id="@+id/txt_welcom"
        style="@style/EstiloTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompleteRutas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/str_mensaje"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
